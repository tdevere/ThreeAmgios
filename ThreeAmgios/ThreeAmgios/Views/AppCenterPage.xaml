<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThreeAmgios.Views.AppCenterPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Test Tools:" FontSize="Medium" />
            <Button Text="Track Event" HorizontalOptions="Center" Clicked="OnInternalTrackEventButtonOnClicked" />
            <Button Text="Cause Crash" HorizontalOptions="Center" Clicked="OnCrashButtonOnClicked" />
            <Button Text="NewCrashGroup" HorizontalOptions="Center" Clicked="OnNewCrashGroupOnClicked1" />
            <Button Text="Manual Distribution Check" HorizontalOptions="Center" Clicked="OnCheckForNewRelease" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>